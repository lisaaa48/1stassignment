<h1>Books</h1>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<% @books.each do |book| %>
		<tbody>
			<tr>
				<td class=title><%= book.title %></td>
				<td class=body><%= book.body %></td>
				<td class=show><%= link_to "Show", book_path(book.id), class: "show_#{book.id}" %></td>
				<td class=edit><%= link_to "Edit", edit_book_path(book.id), class: "edit_#{book.id}" %></td>
				<td class=destroy><%= link_to "Destroy", book_path(book.id), class: "destroy_#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
			</tr>
		</tbody>
		<% end %>
	</table>

<h2>New book</h2>
	<% if @book.errors.any? %>
		<div id="error_explanation" class="alert alert-danger">
    <h4><%= pluralize(@book.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

	<%= form_for(@book) do |f| %>
		<h4>Title</h4>
		<%= f.text_field :title, class: "book_title" %>

		<h4>Body</h4>
		<%= f.text_area :body, class: "book_body" %>

		<%= f.submit 'Create book' %>

	<% end %>
